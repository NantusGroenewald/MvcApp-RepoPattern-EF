@model Book_Store.DAL.Book
@{
    ViewBag.Title = "Edit Book";
}

<h2>Edit Book</h2>
@using (Html.BeginForm("EditBook", "Book", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BookId)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Title)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.GenreId, "Genre")
            @Html.DropDownList("GenreId", (SelectList)ViewBag.Genres, "Select Genre", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.GenreId)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PublicationYear)
            @Html.EditorFor(m => m.PublicationYear, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.PublicationYear)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.AuthorId, "Author")
            @Html.DropDownList("AuthorId", (SelectList)ViewBag.Authors, "Select Author", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.AuthorId)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PublisherId, "Publisher")
            @Html.DropDownList("PublisherId", (SelectList)ViewBag.Publishers, "Select Publisher", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PublisherId)
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </div>
}
