@model Book_Store.DAL.Author
@{
    ViewBag.Title = "AddAuthor";
}

<h2>AddAuthor</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.AuthorName)
            @Html.EditorFor(m => m.AuthorName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.AuthorName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AuthorSurname)
            @Html.EditorFor(m => m.AuthorSurname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.AuthorSurname)
        </div>
        <button type="submit" class="btn btn-primary">Add Author</button>
    </div>
}
